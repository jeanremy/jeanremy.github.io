{% set assetHash = global.random() %}

<!DOCTYPE html>
<html lang="fr-FR">
  <head>
    <meta charset="utf-8">
    {% if page.url == "/" %}
      <title>{{ meta.siteName }} - {{ meta.siteBaseline }}</title>
    {% else %}
      <title>{{ title }} - {{ meta.siteName }}</title>
    {% endif %}
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="description" content="{{ meta.siteDescription }}">
    <meta name="robots" content="noodp">

    {% favicon './src/assets/img/favicon.svg' %}

    <link rel="stylesheet" href="/assets/css/base.css?{{assetHash}}">
    <link rel="stylesheet" href="/assets/css/print.css?{{assetHash}}" media="print">
    {% include "schemas/website.njk" %}

  </head>
  <body class="page">
    <div class="content container">
      {% include "partials/header.njk" %}
      <main class="main">
        {{ content | safe }}
      </main>
      {% include "partials/footer.njk" %}
    </div>
    {% include "partials/sidebar.njk" %}
    <script src="/assets/js/bundle.js?{{assetHash}}"></script>
  </body>
</html>