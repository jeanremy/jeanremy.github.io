---
pagination:
  data: collections.tags
  size: 1
  alias: tag
  filter:
    - posts
  addAllPagesToCollections: true
layout: page.njk
permalink: blog/tags/{{ tag | slugify }}/ 
eleventyComputed:
  title: Résultats pour “{{ tag }}”
  eleventyNavigation:
    key: Résultats pour “{{ tag }}”
    parent: Tags
---

{% set postslist = collections[tag] %}
<div
  class="postlist"
>
  {% for post in postslist | reverse %}
    {% include 'partials/post-teaser.njk' %}
  {% endfor %}
</div>